<div class="container">
  <div class="row justify-content-md-center">
      <% if user_signed_in? %>
      <div class="index--form">
        <%= image_tag "#{current_user.image_url}", class: "tweet--user-image" %>
        <%= render 'form', tweet: @tweet %>
      </div>
      <% end %>
      <div class="container">
        <h1>Home</h1>
      </div>
      <div class="index--content">
        <% @tweets.each do |tweet| %>
        <div class="tweet">
          <div class="tweet--header">
            <%= image_tag "#{tweet.user.image_url}", class: "tweet--user-image" %>
            <span class="tweet--username"><%= tweet.user.name %></span> â€¢
            <%= link_to distance_of_time_in_words(Time.now, tweet.created_at), tweet_path(tweet.id), class: "tweet--date" %>
          </div>
          <div class="tweet--content">
            <p class="tweet--content-text">
              <%= tweet.content %>
            </p>
            <hr>
            <div>      
            <%= button_to(tweet_path(tweet.id), class: 'btn btn-info') do %>
              <%= tweet.retweets.length %> Retuitea
            <% end %>
            </div>
            <% if user_signed_in? %>
            <hr>
            <div>
             <i class="far fa-heart"><%= link_to "#{tweet.total_likes}", likes_path(tweet.id), method: :post, class: "tweet--date" %>
              </i>
            </div>
            <hr>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
  </div>
    <%= paginate @tweets %>
</div>


