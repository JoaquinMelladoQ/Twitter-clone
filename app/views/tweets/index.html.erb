<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-auto">
      <p id="notice"><%= notice %></p>
    </div>
    <div class="col-md-auto">
      <h1>Tweets</h1>
    </div>

    <table>
      <thead>
        <tr>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <div class="col-md-auto">
        <tbody>
          <% @tweets.each do |tweet| %>
            <tr>
              <td><%= tweet.content %></td>
              <td><%= link_to 'Show', tweet %></td>
              <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
              <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </div>
    </table>

    <br>

    <%= link_to 'New Tweet', new_tweet_path %>
  </div>
    <%= paginate @tweets %>
</div>


